{
 "name": "Manga Episodes 2.0", // Название расширения
 "manifest_version": 2,
 "version": "1.0",
 "description": "Parse last manga episode and notificate if new one comes", // Описание расширения

 "permissions": [
  "tabs", // Разрешить расширению работать с вкладками
  "alarms",
  "http://www.mangareader.net/*",
  "http://mangafox.me/*",
  "http://readmanga.me/*",
  "http://readmanga.today/*",
  "http://localhost:3030/*",
  "http://104.198.78.237:3030/*"
 ],

 "background": {
    "scripts": ["js/timer-job.js", "js/jquery.min.js", "js/config.js", "js/parser.js", "js/popup.js"],
    "persistent": false
  },

 "browser_action": { // Элементы браузера
  "default_title": "Manga Episodes", // Название кнопки
  "default_icon": "images/icon.png", // Иконка для кнопки
  "icons": {
  	"128": "images/icon.png",
  	"48": "images/icon.png",
  	"16": "images/icon.png"
  },
  "default_popup": "popup.html" // Всплывающее окно
 }
}